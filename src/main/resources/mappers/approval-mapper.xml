	<!--  작성자 : 안소은 - 지출결의서 기안하기 -->
	<insert id="">
		insert
	       into ec_document
	       (
	         ec_doc_no
	       , mem_no
	       , ec_writer
	       , ec_title
	       , ec_cnt
	       , ec_code
	       , ec_enrolldate
	       , ec_status
	       , ec_doc_name
	       )
	       values
	       (
	         seq_ecno.nextval
	       , #{memNo}
	       , #{ecWriter}
	       , #{ecTitle}
	       , #{ecCnt}
	       , default
	       , default
	       , #{ecDocName}
	       )
	</insert>
	
	
	
	
	
	<!-- 작성자 : 김혜미 - 연차 신청 -->
	<insert id="offInsert" parameterType="off">
		insert all
		  into ec_document
		     (
               ec_doc_no
             , mem_no
             , ec_writer
             , ec_title
             , ec_cnt
             , ec_code
             , ec_enrolldate
             , ec_status
             , ec_doc_name
             )
		values 
		     (
		       SEQ_ECNO.NEXTVAL
		     , #{memNo}
		     , #{ecWriter}
		     , #{ecTitle}
		     , #{ecCnt}
		     , #{ecCode}
		     , DEFAULT
		     , DEFAULT
		     , #{ecDocName}
		     )
		  into off
		  	 (
		  	   ec_doc_no
		  	 , off_start
		  	 , off_end
		  	 )
		values
		     (
		       SEQ_ECNO.NEXTVAL
		     , to_date(#{offStart}, 'YYYY-MM-DD')
		  	 , to_date(#{offEnd}, 'YYYY-MM-DD')
		     )
		  into approval_path
		     (
		       approval_path_no
		     , ec_doc_no
		     , mem_no
		     , ec_turn
		     , ec_status
		     )
		values
			 (
			   SEQ_APNO.NEXTVAL
			 , SEQ_ECNO.NEXTVAL
			 , 7
			 , 1
			 , DEFAULT
			 )
		select *
		from dual
	</insert>
	
	<select id="offDetail" resultMap="elecApproval" parameterType="_int">
	     select 
		       e.ec_doc_no
		     , e.mem_no
		     , ec_writer
		     , ec_title
		     , ec_cnt
		     , ec_code
		     , ec_enrolldate
		     , e.ec_status
		     , ec_doc_name
		     , ec_canceldate
		     , ec_compdate
		     , off_start
		     , off_end
		     , approval_path_no
		     , ec_turn
		     , a.ec_status
		     , ap_enrolldate
		 from ec_document e
		 join off o on(o.ec_doc_no = e.ec_doc_no)
		 join approval_path a on(a.ec_doc_no = e.ec_doc_no)
		where e.ec_doc_no = #{ ea.docNo }
	</select>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
