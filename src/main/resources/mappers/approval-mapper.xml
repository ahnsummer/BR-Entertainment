		     , ec_compdate
		 from ec_document e
		where ec_doc_no = #{ ea.ecDocNo }
		  and ec_status = 'Y' 
	</select>	
	
	
	<!-- 작성자 : 최선희 - 기획안/업무연락/회람 작성 -->
	<insert id="insertDocument" parameterType="elecApproval">
  		insert
  		  into ec_document
  		  (
  		    ec_doc_no
  		  , mem_no
  		  , ec_writer
  		  , ec_title
  		  , ec_cnt
  		  , ec_code
  		  , ec_doc_name
  		  , ec_enrolldate
  		  , ec_status
  		  )
  		  values
  		  (
  		    seq_ecno.nextval 
  		  , #{memNo}
  		  , #{ecWriter}
  		  , #{ecTitle}	  
  		  , #{ecCnt}
  		  , #{ecCode}
  		  , #{ecDocName}
  		  , DEFAULT
  		  , DEFAULT
  		  )
  	</insert>

	
